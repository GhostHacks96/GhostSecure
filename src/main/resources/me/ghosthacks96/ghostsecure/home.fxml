<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.ghosthacks96.ghostsecure.gui.HomeGUI">
    <style>
        -fx-background-color: linear-gradient(to bottom right, #0a0a0a 0%, #1a1a1a 100%);
    </style>

    <!-- Header -->
    <top>
        <VBox>
            <HBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets top="25" bottom="20" left="30" right="30" />
                </padding>
                <style>
                    -fx-background-color: #000000f2;
                    -fx-border-color: #00d4ff40;
                    -fx-border-width: 0 0 2 0;
                </style>

                <Label text="ðŸ”’" textAlignment="CENTER">
                    <font>
                        <Font size="28" />
                    </font>
                </Label>

                <Label text="GhostSecure - Control Panel">
                    <font>
                        <Font name="System Bold" size="22" />
                    </font>
                    <style>
                        -fx-text-fill: #00d4ff;
                        -fx-effect: dropshadow(gaussian, #00d4ff4d, 3, 0, 0, 0);
                    </style>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Status:" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="14" />
                    </font>
                    <style>
                        -fx-text-fill: #b0b0b0;
                    </style>
                </Label>

                <Label fx:id="lockStatus" text="Locked?" textAlignment="CENTER" styleClass="status-label">
                    <font>
                        <Font name="System Bold" size="14" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <!-- Sidebar Navigation -->
    <left>
        <VBox fx:id="sidebarNav" prefWidth="250" spacing="5">
            <padding>
                <Insets top="20" bottom="20" left="15" right="15" />
            </padding>
            <style>
                -fx-background-color: #1a1a1af2;
                -fx-border-color: #00d4ff20;
                -fx-border-width: 0 1 0 0;
            </style>

            <!-- Navigation Title -->
            <Label text="Navigation" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="16" />
                </font>
                <style>
                    -fx-text-fill: #00d4ff;
                    -fx-padding: 0 0 15 0;
                </style>
            </Label>

            <!-- Navigation Buttons -->
            <Button fx:id="serviceControlNav" text="ðŸ”§ Service Control" prefWidth="220" prefHeight="50" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Button>

            <Button fx:id="folderManagementNav" text="ðŸ“ Folder Management" prefWidth="220" prefHeight="50" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Button>

            <Button fx:id="programManagementNav" text="ðŸ’» Program Management" prefWidth="220" prefHeight="50" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Button>

            <Button fx:id="settingsNav" text="â›­ Settings" prefWidth="220" prefHeight="50" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Button>

            <Button fx:id="aboutNav" text="ðŸ›ˆ About" prefWidth="220" prefHeight="50" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Button>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Version Info -->
            <Label text="GhostSecure v2.2.1" textAlignment="CENTER">
                <font>
                    <Font size="12" />
                </font>
                <style>
                    -fx-text-fill: #666666;
                    -fx-padding: 15 0 0 0;
                </style>
            </Label>
        </VBox>
    </left>

    <!-- Content Area -->
    <center>
        <StackPane fx:id="contentArea">
            <style>
                -fx-background-color: #1e1e1ef2;
                -fx-background-radius: 0 0 12 12;
            </style>

            <!-- Default loading content -->
            <VBox alignment="CENTER" spacing="20">
                <Label text="Loading..." textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18" />
                    </font>
                    <style>
                        -fx-text-fill: #00d4ff;
                    </style>
                </Label>
            </VBox>
        </StackPane>
    </center>
</BorderPane>