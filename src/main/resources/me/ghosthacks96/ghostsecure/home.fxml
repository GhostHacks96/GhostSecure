<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.ghosthacks96.ghostsecure.gui.HomeGUI"
            prefWidth="750" prefHeight="400" styleClass="main-border-pane">
    <style>
        -fx-background-color: linear-gradient(to bottom right, #0a0a0a 0%, #1a1a1a 100%);
    </style>

    <!-- Header -->
    <top>
        <VBox>
            <HBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets top="25" bottom="20" left="30" right="30" />
                </padding>
                <style>
                    -fx-background-color: #000000f2;
                    -fx-border-color: #00d4ff40;
                    -fx-border-width: 0 0 2 0;
                </style>

                <Label text="ðŸ”’" textAlignment="CENTER">
                    <font>
                        <Font size="28" />
                    </font>
                </Label>

                <Label text="GhostSecure - Control Panel">
                    <font>
                        <Font name="System Bold" size="22" />
                    </font>
                    <style>
                        -fx-text-fill: #00d4ff;
                        -fx-effect: dropshadow(gaussian, #00d4ff4d, 3, 0, 0, 0);
                    </style>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Status:" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="14" />
                    </font>
                    <style>
                        -fx-text-fill: #b0b0b0;
                    </style>
                </Label>

                <Label fx:id="lockStatus" text="ðŸ”’ LOCKED" textAlignment="CENTER" styleClass="status-label">
                </Label>
            </HBox>
        </VBox>
    </top>

    <!-- Sidebar Navigation -->
    <left>
        <VBox fx:id="sidebarNav" prefWidth="200" spacing="6" styleClass="sidebar">
            <padding>
                <Insets top="20" bottom="20" left="12" right="12" />
            </padding>

            <!-- Navigation Title -->
            <Label text="Navigation" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
                <style>
                    -fx-text-fill: #00d4ff;
                    -fx-padding: 0 0 12 0;
                </style>
            </Label>

            <!-- Navigation Buttons -->
            <Button fx:id="serviceControlNav" text="ðŸ”§ Service Control" prefWidth="200" prefHeight="20" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="10" />
                </font>
            </Button>

            <Button fx:id="folderManagementNav" text="ðŸ“ Folders" prefWidth="200" prefHeight="20" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="10" />
                </font>
            </Button>

            <Button fx:id="programManagementNav" text="ðŸ’» Programs" prefWidth="200" prefHeight="20" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="10" />
                </font>
            </Button>

            <Button fx:id="settingsNav" text="âš™ Settings" prefWidth="200" prefHeight="20" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="10" />
                </font>
            </Button>

            <Button fx:id="aboutNav" text="â„¹ About" prefWidth="200" prefHeight="20" styleClass="nav-button">
                <font>
                    <Font name="System Bold" size="10" />
                </font>
            </Button>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Version Info -->
            <Label fx:id="appVersionLabel" textAlignment="CENTER">
                <font>
                    <Font size="12" />
                </font>
                <style>
                    -fx-text-fill: #666666;
                    -fx-padding: 15 0 0 0;
                </style>
            </Label>
        </VBox>
    </left>

    <!-- Content Area with ScrollPane for dynamic scaling -->
    <center>
        <ScrollPane fx:id="contentScrollPane" fitToWidth="true" fitToHeight="true"
                    hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" styleClass="content-scroll-pane">
            <style>
                -fx-background: transparent;
                -fx-background-color: transparent;
            </style>

            <StackPane fx:id="contentArea" styleClass="content-area">
                <!-- Loading content will be replaced by dynamically loaded FXML -->
                <VBox alignment="CENTER" spacing="20">
                    <Label text="Loading..." textAlignment="CENTER">
                        <font>
                            <Font name="System Bold" size="18" />
                        </font>
                        <style>
                            -fx-text-fill: #00d4ff;
                        </style>
                    </Label>
                </VBox>
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>