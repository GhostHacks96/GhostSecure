<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.ghosthacks96.ghostsecure.gui.SetPassword_GUI">
    <style>
        -fx-background-color: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    </style>

    <center>
        <VBox alignment="CENTER" spacing="30" maxWidth="500" maxHeight="650">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50" />
            </padding>
            <style>
                -fx-background-color: linear-gradient(135deg, #222222 0%, #333333 100%);
                -fx-background-radius: 15;
                -fx-border-color: rgba(0, 255, 255, 0.3);
                -fx-border-width: 1;
                -fx-border-radius: 15;
                -fx-effect: dropshadow(gaussian, rgba(0, 255, 255, 0.1), 20, 0, 0, 5);
            </style>

            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="15">
                <Label text="🔐" textAlignment="CENTER">
                    <font>
                        <Font size="48" />
                    </font>
                </Label>

                <Label text="Set Your Password" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="26" />
                    </font>
                    <style>
                        -fx-text-fill: #00ffff;
                        -fx-effect: dropshadow(gaussian, rgba(0, 255, 255, 0.5), 5, 0, 0, 0);
                    </style>
                </Label>

                <Label text="Create a secure password to protect your application" textAlignment="CENTER" wrapText="true" maxWidth="350">
                    <font>
                        <Font size="14" />
                    </font>
                    <style>
                        -fx-text-fill: #cccccc;
                    </style>
                </Label>
            </VBox>

            <!-- Error Message -->
            <Label fx:id="errorLabel" text="" textAlignment="CENTER" wrapText="true" maxWidth="400" visible="false">
                <font>
                    <Font size="13" />
                </font>
                <style>
                    -fx-text-fill: #ff4757;
                    -fx-background-color: rgba(255, 71, 87, 0.15);
                    -fx-background-radius: 8;
                    -fx-padding: 12 16;
                    -fx-border-color: rgba(255, 71, 87, 0.3);
                    -fx-border-radius: 8;
                    -fx-border-width: 1;
                </style>
            </Label>

            <!-- Form Section -->
            <VBox spacing="25" alignment="CENTER">

                <!-- New Password Field -->
                <VBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="New Password">
                        <font>
                            <Font name="System Bold" size="14" />
                        </font>
                        <style>
                            -fx-text-fill: #00ffff;
                        </style>
                    </Label>

                    <PasswordField fx:id="passwordField" promptText="Enter your new password" prefWidth="350" prefHeight="45">
                        <style>
                            -fx-background-color: rgba(0, 0, 0, 0.3);
                            -fx-background-radius: 8;
                            -fx-border-color: rgba(0, 255, 255, 0.3);
                            -fx-border-radius: 8;
                            -fx-border-width: 1;
                            -fx-text-fill: white;
                            -fx-prompt-text-fill: #666666;
                            -fx-padding: 12 16;
                            -fx-font-size: 14;
                        </style>
                    </PasswordField>

                    <Label text="Password should be at least 8 characters long" textAlignment="LEFT">
                        <font>
                            <Font size="11" />
                        </font>
                        <style>
                            -fx-text-fill: #888888;
                        </style>
                    </Label>
                </VBox>

                <!-- Confirm Password Field -->
                <VBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Confirm Password">
                        <font>
                            <Font name="System Bold" size="14" />
                        </font>
                        <style>
                            -fx-text-fill: #00ffff;
                        </style>
                    </Label>

                    <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" prefWidth="350" prefHeight="45">
                        <style>
                            -fx-background-color: rgba(0, 0, 0, 0.3);
                            -fx-background-radius: 8;
                            -fx-border-color: rgba(0, 255, 255, 0.3);
                            -fx-border-radius: 8;
                            -fx-border-width: 1;
                            -fx-text-fill: white;
                            -fx-prompt-text-fill: #666666;
                            -fx-padding: 12 16;
                            -fx-font-size: 14;
                        </style>
                    </PasswordField>

                    <Label text="Both passwords must match exactly" textAlignment="LEFT">
                        <font>
                            <Font size="11" />
                        </font>
                        <style>
                            -fx-text-fill: #888888;
                        </style>
                    </Label>
                </VBox>
            </VBox>

            <!-- Submit Button -->
            <VBox spacing="15" alignment="CENTER">
                <Button fx:id="submitButton" onAction="#onSubmitButtonClick" text="SET PASSWORD" prefWidth="350" prefHeight="50">
                    <font>
                        <Font name="System Bold" size="16" />
                    </font>
                    <style>
                        -fx-background-color: linear-gradient(135deg, #00ffff 0%, #0099cc 100%);
                        -fx-text-fill: #000000;
                        -fx-background-radius: 8;
                        -fx-cursor: hand;
                        -fx-effect: dropshadow(gaussian, rgba(0, 255, 255, 0.4), 8, 0, 0, 3);
                    </style>
                </Button>

                <Label text="Remember this password - it cannot be recovered if lost!" textAlignment="CENTER" wrapText="true" maxWidth="350">
                    <font>
                        <Font name="System Bold" size="12" />
                    </font>
                    <style>
                        -fx-text-fill: #ffa502;
                        -fx-background-color: rgba(255, 165, 2, 0.1);
                        -fx-background-radius: 6;
                        -fx-padding: 8 12;
                    </style>
                </Label>
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="25" />
            </padding>
            <Label text="© 2025 GhostHacks96 - Secure Password Setup">
                <font>
                    <Font size="11" />
                </font>
                <style>
                    -fx-text-fill: #666666;
                </style>
            </Label>
        </HBox>
    </bottom>
</BorderPane>